{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid mt-5 pt-5">
    <h1 class="mt-5 mx-auto text-center">Modifier votre avatar</h1>
    <div class="row mb-5 text-center d-flex flex-row justify-content-center">
        <img class="user-img mx-auto edit-avatar" src="/images/user/{{ app.user.filename }}" width="10%" alt="{{ app.user.username }}">
    </div>
    {{ form_start(form) }}
    <div class="form-group col-md-6 mx-auto">
        {{ form_row(form.avatar) }}
    </div>
    <div class="form-group d-flex justify-content-center">
        <button class="btn btn-light-green m-0 mx-auto">Modifier</button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}

