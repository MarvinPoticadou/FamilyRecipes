{% extends 'base.html.twig' %}

{% block title user.username %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="col-md-10 mx-auto p-0 user-account pt-5">
            <div class="row text-center my-4">
                <h1 class="col-md-12 user-title">{{ user.username }} <i class="far fa-edit"></i></h1>
                <div class="form-group mx-auto d-none">
                    <div class="d-flex flex-row align-items-center">
                        <input class="form-control" type="text" name="username" id="username" placeholder="Nouveau nom d'utilisateur">
                        <button class="btn btn-light-green p-2 edit-btn"><i class="far fa-paper-plane"></i></button>
                    </div>
                    <span id="username-error"></span>
                </div>
            </div>

            <div class="row mb-5 text-center">
                <img class="user-img mx-auto edit-avatar" src="/images/user/{{ user.filename }}" width="20%" alt="{{ user.username }}">
            </div>

            <div class="form-group mx-auto d-none">
                <input class="form-control" type="file" name="avatar" id="avatar">
            </div>

            <div class="row text-center my-4">
                <h1 class="col-md-12 recipe-title">Mes recettes</h1>
            </div>

            <div class="row d-flex flex-column flex-wrap">
                {% for recipe in recipes %}
                    <div class="card mb-4 col-md-6 p-0 flex-row user-recipe-card mx-auto">
                        <img class="card-img-top" src="/images/recipe/{{ recipe.filename }}" alt="{{ recipe.title }}">
                        <div class="card-body text-center">
                            <h4 class="card-title"><a>{{ recipe.title }}</a></h4>
                            <p class="card-text">{{ recipe.description }}</p>
                            <a href="#" class="btn btn-light-green">Voir</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/account.js') }}"></script>
{% endblock %}

