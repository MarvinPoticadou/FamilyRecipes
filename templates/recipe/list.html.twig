{% extends 'base.html.twig' %}

{% block title cat %}

{% block body %}

    <div class="container-fluid d-flex flex-column justify-content-center align-items-center mt-5">
        <h1 class="mt-5">{{ cat }}</h1>
        <div class="row flex-wrap col-md-12">
            {% for recipe in recipes %}
                <div class="card col-md-2 p-0">
                    <img class="card-img-top" src="/images/recipe/{{ recipe.filename }}" alt="Card image cap">
                    <div class="card-body">
                        <h4 class="card-title"><a>{{ recipe.title }}</a></h4>
                        <p class="card-text">{{ recipe.description }}</p>
                        <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}" class="btn btn-light-green">Voir</a>
                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}

