{% extends 'base.html.twig' %}
{% block title 'Se connecter' %}
{% block body %}

    <div class="container-fluid mt-4">
        <h2 class="col-md-12 text-center">Se connecter</h2>
        <div class="row col-md-12">
            <form action="{{ path('login') }}" method="post" class="mx-auto">
                <div class="form-group">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata, "security") }}</div>
                    {% endif %}
                </div>

                <div class="form-group">
                    <label for="username">Nom d'utilisateur</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="_password" class="form-control">
                </div>

                <button class="btn btn-success">Se connecter</button>
            </form>
        </div>
    </div>
{% endblock %}