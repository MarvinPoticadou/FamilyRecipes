{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex flex-column flex-md-row justify-content-center mt-5">
        <div class="step-create col-md-8 flex-column justify-content-center align-items-center mt-5">
            <h2>{{ title }}</h2>
            {{ form_start(form) }}
            <div class="col">

                <div class="form-group">
                    <label>Image</label>
                    {{ form_row(form.pic) }}
                </div>

                <div class="form-group">
                    <label>Contenu</label>
                    {{ form_row(form.content) }}
                </div>

                <div class="form-group">
                    {{ form_widget(form.add, {'attr': {'class': 'btn btn-light-green'}}) }}
                    {{ form_widget(form.finish, {'attr': {'class': 'btn btn-light-green'}}) }}
                </div>
            </div>

            {{ form_end(form) }}
        </div>
        <div class="created-steps col-md-4 flex-column mt-5">
            <h2>Ã‰tapes</h2>
            <div class="col-md-12 flex-column-reverse">
                {% for rightStep in steps %}
                    <div class="card mb-4 col-md-12 p-0 flex-column flex-md-row user-recipe-card mx-auto">
                        <img class="card-img-top" src="/images/recipe/{{ rightStep.filename }}" alt="{{ rightStep.filename }}">
                        <div class="card-body text-center">
                            <h4>{{ rightStep.title }}</h4>
                            <p class="card-text">{{ rightStep.content }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

