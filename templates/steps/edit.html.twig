{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex flex-row justify-content-center mt-5">
        <div class="col-md-8 flex-column justify-content-center align-items-center mt-5" style="border-right: 2px solid grey;">
            {{ form_start(form) }}
            <div class="col">

                <div class="form-group">
                    <label>Image</label>
                    {{ form_row(form.pic) }}
                </div>

                <div class="form-group">
                    <label>Contenu</label>
                    {{ form_row(form.content) }}
                </div>

                <div class="form-group">
                    <button type="submit" name="submit" class="btn btn-light-green">Enregistrer</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block title 'Nouveau post'%}